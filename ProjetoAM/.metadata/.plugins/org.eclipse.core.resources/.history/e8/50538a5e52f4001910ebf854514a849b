package br.com.algoris.beans;

public class Professor extends Curso {

	private int codigo;
	private String nome;
	private String email;
	private Login login;
	
	public String getAll() {
		return super.getAll() + "\n"+
				"Código: " + codigo + "\n" +
				"Nome: " + nome + "\n" +
				"E-mail: " + email + "\n" +
				"Login: " + login.getRm();
	}
	
	public void setAll(int codigo, String nome, String email, Login login) {
		setCodigo(codigo);
		setNome(nome);
		setEmail(email);
		setLogin(login);
	}
	
	public Professor() {
		super();
	}

	public Professor(int codigo, String nome, String email, Login login) {
		super();
		this.codigo = codigo;
		this.nome = nome;
		this.email = email;
		this.login = login;
	}

	public int getCodigo() {
		return codigo;
	}
	
	public void setCodigo(int codigo) {
		this.codigo = codigo;
	}
	
	public String getNome() {
		return nome;
	}
	
	public void setNome(String nome) {
		this.nome = nome;
	}
	
	public String getEmail() {
		return email;
	}
	
	public void setEmail(String email) {
		this.email = email;
	}
	
	public Login getLogin() {
		return login;
	}
	
	public void setLogin(Login login) {
		this.login = login;
	}
}
